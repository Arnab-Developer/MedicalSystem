@using MedicalSystem.FrontEnds.WebMvc.Models
@model IEnumerable<ConsultationModel>
@{
    ViewData["Title"] = "Consultations";
}

<h1>Consultations</h1>
<p>
    <a asp-controller="Consultation" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Country)</th>
            <th>@Html.DisplayNameFor(model => model.State)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.PinCode)</th>
            <th>@Html.DisplayNameFor(model => model.Problem)</th>
            <th>@Html.DisplayNameFor(model => model.Medicine)</th>
            <th>@Html.DisplayNameFor(model => model.DoctorId)</th>
            <th>@Html.DisplayNameFor(model => model.Doctor!.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Doctor!.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.PatentId)</th>
            <th>@Html.DisplayNameFor(model => model.Patent!.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Patent!.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Patent!.LastName)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var consultation in Model)
        {
        <tr>
            <td>@consultation.Id</td>
            <td>@consultation.Date</td>
            <td>@consultation.Country</td>
            <td>@consultation.State</td>
            <td>@consultation.City</td>
            <td>@consultation.PinCode</td>
            <td>@consultation.Problem</td>
            <td>@consultation.Medicine</td>
            <td>@consultation.DoctorId</td>
            <td>@consultation.Doctor!.Id</td>
            <td>@consultation.Doctor!.FirstName</td>
            <td>@consultation.Doctor!.LastName</td>
            <td>@consultation.PatentId</td>
            <td>@consultation.Patent!.Id</td>
            <td>@consultation.Patent!.FirstName</td>
            <td>@consultation.Patent!.LastName</td>
            <td>
                <a asp-controller="Consultation" asp-action="Details" asp-route-id="@consultation.Id">Details</a>
                <a asp-controller="Consultation" asp-action="Edit" asp-route-id="@consultation.Id">Edit</a>
                <a asp-controller="Consultation" asp-action="Delete" asp-route-id="@consultation.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>